<!DOCTYPE html>
<html>
<head runat="server">
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		@Html.ActionLink("DIT Kevin Street Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item"> @Html.ActionLink("Home", "UserArea", "Customer", null, new { @class = "nav-link" })</li>
				<li class="nav-item">@Html.ActionLink("Books", "BookList", "Book", null, new { @class = "nav-link" })</li>
				<li class="nav-item">@Html.ActionLink("Suggested Books", "SuggestedBook", "Customer", null, new { @class = "nav-link" })</li>
				<li class="nav-item">@Html.ActionLink("Features", "Features", "Features", null, new { @class = "nav-link" })</li>

				<li class="nav-item">@Html.ActionLink("About", "Info", "About", null, new { @class = "nav-link" })</li>
				<li class="nav-item">@Html.ActionLink("Requests", "RequestPage", "Customer", null, new { @class = "nav-link" })</li>
			</ul>
			<form class="form-inline my-2 my-lg-0">
				<input type="button" value="Log Out" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("LogOut", "Customer")'" />
			</form>
		</div>
	</nav>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
